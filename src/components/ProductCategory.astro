---
interface Props {
  title: string;
  count: number;
  icon: string;
  active?:boolean;
}
const {icon,count,title,active} = Astro.props
---

<div class="bg-neutral flex flex-col gap-2 items-center w-[15vw] h-fit py-2" class:list={{ "border-b-primary":active,"border-b-4":active }}>
  <div class="w-10 h-10 fill-primary stroke-primary">
  <Fragment set:html={icon}/>
  </div>
  <h2 class="text-2xl font-semibold">{title}</h2>
  <p class="text-sm font-thin">{count}</p>
</div>
