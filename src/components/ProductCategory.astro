---
interface Props {
  title: string;
  count: number;
  icon: string;
  active?: boolean;
}
const { icon, count, title, active } = Astro.props;
---

<div
  class="group flex h-fit w-[15vw] cursor-pointer flex-col items-center gap-2 bg-neutral py-8"
>
  <div class="h-10 w-10 fill-primary stroke-primary">
    <Fragment set:html={icon} />
  </div>
  <h2 class="text-2xl font-semibold">{title}</h2>
  <p class="text-sm font-thin">{count}</p>
  <div
    class="-mb-8 mt-2 h-1 w-full transition group-hover:bg-primary"
    class:list={{ "bg-primary": active, "bg-neutral": !active }}
  >
  </div>
</div>
