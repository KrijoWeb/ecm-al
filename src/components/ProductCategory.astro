---
interface Props {
  title: string;
  count: number;
  icon: string;
  active?:boolean;
}
const {icon,count,title,active} = Astro.props
---

<div class="group bg-neutral flex flex-col gap-2 items-center w-[15vw] h-fit py-8 cursor-pointer">
  <div class="w-10 h-10 fill-primary stroke-primary">
  <Fragment set:html={icon}/>
  </div>
  <h2 class="text-2xl font-semibold">{title}</h2>
  <p class="text-sm font-thin">{count}</p>
  <div class="h-1 w-full -mb-8  mt-2 group-hover:bg-primary transition" class:list={{"bg-primary":active, "bg-neutral":!active}}></div>
</div>
