import ArrowButton from "../ArrowButton";
import Calendar from "../../svg/calendar.svg?raw";
---

<div class="flex bg-neutral p-3">
  <div class="basis-1/3">
    <img
      class="h-full w-full object-cover"
      src="/foto/design/linde_new_2.jpeg"
      alt="Linde News"
    />
  </div>
  <div class="flex basis-2/3 flex-col gap-4 px-6 py-2">
    <h3 class="text-2xl font-bold">
      Linde shpallet lideri numer 1 ne forklift
    </h3>
    <div class="flex gap-2">
      <div class="h-4 w-4 fill-primary stroke-primary">
        <Fragment set:html={Calendar} />
