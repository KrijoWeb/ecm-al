---
import InstaLogo from "../../svg/instagram.svg?raw";
import LocationSvg from "../../svg/location.svg?raw";
import EmailSvg from "../../svg/email.svg?raw";

const logos = [InstaLogo, LocationSvg, EmailSvg];

interface Props {
  header?: string;
  img?: string;
  compactNav?: boolean;
}
const { header, img, compactNav } = Astro.props;
---

{compactNav ? 
(<div id="main-nav" class="w-full fixed bg-neutral z-[100] flex px-4">
      <div
        class="flex [&>*]:py-4 items-stretch mx-auto w-[66vw] border-b-neutral-400 border-b-2"
      >
        <a href="/">
          <img src="/img/emc_logo.png" alt="Logo" class="basis-[14%]" />
        </a>
        <nav class="flex items-center justify-around flex-1">
          <a href="#" class="text-gray-800 hover:text-gray-600">PRODUKTET</a>
          <a href="#" class="text-gray-800 hover:text-gray-600">SHËRBIMET</a>
          <a href="/product-finder" class="text-gray-800 hover:text-gray-600"
            >SHOP</a
          >
          <a href="#" class="text-gray-800 hover:text-gray-600">RRETH NESH</a>
          <a href="/karriera" class="text-gray-800 hover:text-gray-600"
            >KARRIERA</a
          >
      <a href="/contact" class="text-gray-800 hover:text-gray-600">KONTAKT</a>
        </nav>
      </div>
      <div class="flex gap-2 items-center">
        {
          logos.map((logo) => (
            <div class="h-6 w-6 flex items-center justify-center">
              <Fragment set:html={logo} />
            </div>
          ))
        }
      </div>
    </div>
) 
:  (<div
  id="nav-container"
  class="max-w-screen aspect-[4/1] bg-cover bg-top bg-fixed"
  style=`background-image: url(${img});`
>
  <div
    id="nav-bg"
    class="bg-neutral-200 w-full h-full flex flex-col justify-between items-center relative "
  >
    <div id="main-nav" class="w-full fixed bg-neutral z-[100] flex px-4">
      <div
        class="flex [&>*]:py-4 items-stretch mx-auto w-[66vw] border-b-neutral-400 border-b-2"
      >
        <a href="/">
          <img src="/img/emc_logo.png" alt="Logo" class="basis-[14%]" />
        </a>
        <nav class="flex items-center justify-around flex-1">
          <a href="#" class="text-gray-800 hover:text-gray-600">PRODUKTET</a>
          <a href="#" class="text-gray-800 hover:text-gray-600">SHËRBIMET</a>
          <a href="/product-finder" class="text-gray-800 hover:text-gray-600"
            >SHOP</a
          >
          <a href="#" class="text-gray-800 hover:text-gray-600">RRETH NESH</a>
          <a href="/karriera" class="text-gray-800 hover:text-gray-600"
            >KARRIERA</a
          >
          <a href="/contact" class="text-gray-800 hover:text-gray-600">KONTAKT</a>
        </nav>
      </div>
      <div class="flex gap-2 items-center">
        {
          logos.map((logo) => (
            <div class="h-6 w-6 flex items-center justify-center">
              <Fragment set:html={logo} />
            </div>
          ))
        }
      </div>
    </div>
    <div id="header-bg" class="my-auto bg-logoBg">
      <h1 class="font-bold text-5xl uppercase text-white px-6 py-4" id="header">
        {header}
      </h1>
    </div>
    <div></div>
  </div>
</div>)
}

