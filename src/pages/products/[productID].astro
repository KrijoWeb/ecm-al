                <p>8000 kg</p>
              </div>
              <div class="flex flex-col">
                <div class="h-12 w-12">
                  <Fragment set:html={Height} />
                </div>
                <p>8670 mm</p>
              </div>
              <div class="flex flex-col">
                <div class="h-12 w-12">
                  <Fragment set:html={Engine} />
